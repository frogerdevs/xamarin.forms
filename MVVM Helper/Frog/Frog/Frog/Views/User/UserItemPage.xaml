<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Frog.Views.User.UserItemPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="BtnSave" Text="Save" Command="{Binding SaveCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="UserName" FontSize="Medium"></Label>
            <Entry Text="{Binding User.UserName}" FontSize="Small"></Entry>
            <Label Text="Password" FontSize="Medium"></Label>
            <Entry Text="{Binding User.Password}" FontSize="Small"></Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>